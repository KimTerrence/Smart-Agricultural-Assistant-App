<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAA.MainPage"
             NavigationPage.HasBackButton="False">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Rice Pest Detection"
                   FontSize="24"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />

            <Image x:Name="CapturedImage"
                   HeightRequest="300"
                   Aspect="AspectFit"
                   BackgroundColor="LightGray" />

            <Button Text="📷 Capture Photo"
                    Clicked="OnCapturePhotoClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White" />

            <Button Text="🖼️ Browse Image"
                    Clicked="OnBrowseImageClicked"
                    BackgroundColor="#2196F3"
                    TextColor="White" />

            <CollectionView x:Name="PredictionList" SelectionMode="Single" SelectionChanged="OnPredictionSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BackgroundColor="#eef" CornerRadius="8">
                            <Label Text="{Binding}" FontSize="16" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
