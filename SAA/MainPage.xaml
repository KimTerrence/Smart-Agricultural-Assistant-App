<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAA.MainPage"
             NavigationPage.HasBackButton="False">

    <ScrollView>
        <Grid>

            <!-- Scrollable Main Content -->
            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="20">

                    <Label Text=""
                       FontSize="24"
                       HorizontalOptions="Center"
                       FontAttributes="Bold" />

                    <Image x:Name="CapturedImage"
                       HeightRequest="300"
                       Aspect="AspectFit"
                       BackgroundColor="LightGray" />

                    <Button Text="📷 Capture Photo"
                        Clicked="OnCapturePhotoClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White" />

                    <Button Text="🖼️ Upload Photo"
                        Clicked="OnBrowseImageClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White" />

                    <Button Text="Browse Pest"
                        Clicked="OnBrowsePestClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White" />

                    <VerticalStackLayout x:Name="PredictionList"
                                     Spacing="20"
                                     VerticalOptions="Start" />

                </VerticalStackLayout>
            </ScrollView>

            <!-- Loading Overlay (on top of everything) -->
            <Grid x:Name="LoadingOverlay"
              BackgroundColor="#80000000"
              IsVisible="False"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand"
              ZIndex="1000">

                <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="True"
                               Color="White"
                               WidthRequest="100"
                               HeightRequest="100"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>
            </Grid>

        </Grid>
    </ScrollView>

</ContentPage>
