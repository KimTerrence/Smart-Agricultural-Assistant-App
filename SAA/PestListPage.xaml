<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAA.PestListPage"
             Title="Pest List">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Label Text="Rice Pests"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#2E3A59"
                   HorizontalOptions="Center" />

            <Grid x:Name="PestGrid" ColumnSpacing="12" RowSpacing="12">
                <!-- Pest cards will be added in code-behind -->
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>